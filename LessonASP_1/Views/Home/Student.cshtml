@model IEnumerable<LessonASP_1.Models.Student>
<DOCTYPE html>
<html>
    <head>
        <style>
            body{
                 background:#C7FBA5;
            }
            .WebBody{
                float:left;
                display:block;
                background:#B4FB86;
                width:80%;
                margin-left:10%;
            }
            .WebName{
                float:left;
                display:block;
                background:#9AF75E;
                width:100%;
                height:150px;
                margin-bottom:5px;
            }
            .ContextMenu{
                float:left;
                background:#9AF75E;
                display:block;
                width:20%; 
                height:450px;
            }
            .Content{
                float:left;
                background:#9AF75E;
                display:block;
                width:80%;
                min-height:1000px;
            }
        </style>
    </head>
    <body>
        <div class="WebBody">
            <div class="WebName">
                <h1>Студетны</h1>
                    
            </div>
            <div class="ContextMenu">
            
            </div>
            <div class="Content">
                <table>
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Имя</th>
                            <th>Возраст</th>
                            <th>Класс</th>
                            <th>Буква класса</th>
                        </tr>
                    </thead>
                     <thead>
                       @foreach (var st in Model)
                       {
                        <tr>
                           <td><a href="~/Home/StudentPersonalAccount/@st.Id">@st.Id </a></td>
                           <td>@st.Name</td>
                           <td>@st.Age</td>
                           <td>@st.Klass</td>
                           <td>@st.CharKlass</td>
                        </tr>
                       }
                    </thead>
                </table>
            </div>
        </div>
    </body>
</html>
